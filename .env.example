# =============================================================================
# GENESIS - Environment Configuration
# Copy to .env and configure your values
# =============================================================================

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=genesis_user
DB_PASSWORD=genesis_pass
DB_NAME=genesis
DB_SSLMODE=disable

# Server
PORT=8090
GIN_MODE=debug

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ACCESS_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
